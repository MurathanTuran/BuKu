<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".View.LoginAndRegisterFragments.LoginFragment">

        <EditText
            android:id="@+id/emailTextLoginFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Example@mail.com"
            android:inputType="textEmailAddress"
            android:textSize="20sp"
            android:layout_marginTop="32dp" />

        <EditText
            android:id="@+id/passwordTextLoginFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Şifre"
            android:inputType="textPassword"
            android:textSize="20sp"
            android:layout_marginTop="32dp" />

        <Button
            android:id="@+id/loginButtonLoginFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#08FABB"
            android:text="Giriş Yap"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="32dp" />

    </LinearLayout>

</ScrollView>